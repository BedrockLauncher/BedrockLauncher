            <Button UseLayoutRounding="True" SnapsToDevicePixels="True" Foreground="White" FontSize="26" HorizontalAlignment="Center" Margin="286,-8,286,0" VerticalAlignment="Top" Width="250" Height="56" Padding="0" FontFamily="/BedrockLauncher;component/#Minecraft Ten" Style="{DynamicResource ButtonStyle1}" BorderBrush="{x:Null}">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="0" Direction="270" Opacity="0.2" ShadowDepth="4"/>
                </Button.Effect>
                <Button.Background>
                    <ImageBrush ImageSource="MainPagePlayButton.png"/>
                </Button.Background>
                <TextBlock UseLayoutRounding="True" SnapsToDevicePixels="True" Text="{DynamicResource MainPage_PlayButton}" Margin="0,-4,0,0" FontSize="24" TextOptions.TextHintingMode="Fixed" TextTrimming="WordEllipsis">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="0" Direction="270" ShadowDepth="2" RenderingBias="Quality" Opacity="0.43"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Button>
            <ComboBox HorizontalAlignment="Left" Margin="4,4,0,4" VerticalAlignment="Top" Width="200" Height="47" Style="{DynamicResource ComboBoxStyle1}" ItemContainerStyle="{DynamicResource ComboBoxItemStyle1}">
                <ComboBoxItem>Latest version</ComboBoxItem>
                <ComboBoxItem>Minecraft 1.16.200</ComboBoxItem>
                <ComboBoxItem>Minecraft 1.16.100</ComboBoxItem>
                <ComboBoxItem>Minecraft 1.16.4</ComboBoxItem>
                <ComboBoxItem>Minecraft 1.16.1</ComboBoxItem>
                <ComboBoxItem>Minecraft 1.14.100</ComboBoxItem>
            </ComboBox>
        </Grid>
        <Grid Height="57" Margin="1,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <ToggleButton x:Name="SettingsButton" Click="SettingsButton_Click" VerticalAlignment="Bottom" Height="59" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontFamily="/BedrockLauncher;component/#Noto Sans" FontSize="14" Padding="55,1,1,1" Width="179" HorizontalContentAlignment="Left" Focusable="False" HorizontalAlignment="Left">
                <ToggleButton.ToolTip>
                    <ToolTip Content="{DynamicResource ResourceKey=MainWindow_SettingsButton}"/>
                </ToggleButton.ToolTip>
                <TextBlock Text="{DynamicResource ResourceKey=MainWindow_SettingsButton}" LineStackingStrategy="BlockLineHeight" Block.LineHeight="17" VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap" Padding="1,0,0,3"/>
            </ToggleButton>
            <Image IsHitTestVisible="False" SnapsToDevicePixels="True" Source="settings_icon.png" MinWidth="29" MinHeight="29" RenderTransformOrigin="0.776,0.983" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Height="29" Margin="14,14,0,0"/>
        </Grid>
    </Grid>
</Window>