<ComboBox    x:Class="BedrockLauncher.Controls.Config.LanguageCombobox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             VerticalContentAlignment="Center"
             d:DesignHeight="330" d:DesignWidth="32"
             Width="330" Height="32" 
             DropDownClosed="LanguageCombobox_DropDownClosed"
             Style="{DynamicResource GenericComboBoxStyle}" ItemContainerStyle="{DynamicResource GenericComboBoxItemStyle}"
             Initialized="LanguageCombobox_Initialized"
             Loaded="LanguageCombobox_Loaded"
             Foreground="White"
             SelectedIndex="0"
             Padding="15,0"
             FontSize="14">
</ComboBox>
